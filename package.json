{
  "name": "nuxt-docs",
  "version": "1.0.0",
  "description": "Nuxt.js documentation files",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "dev": "nodemon --watch *.js --exec 'node api.js'",
    "lint": "eslint *.js",
    "start": "node api.js",
    "deploy": "now --alias",
    "precommit": "npm run lint",
    "textlint:ja": "textlint --config ja/.textlintrc ja/**/*.md",
    "textlint:ja:fix": "yarn textlint:ja --fix --format diff"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "ja/**/*.md": [
        "textlint --config ja/.textlintrc --fix --format diff",
        "git add"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuxt/docs.git"
  },
  "keywords": [
    "nuxt",
    "nuxt.js",
    "vue",
    "micro"
  ],
  "author": "Chopin brothers (@Atinux & @alexchopin)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuxt/docs/issues"
  },
  "homepage": "https://github.com/nuxt/docs#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "consola": "^1.4.4",
    "download": "^7.1.0",
    "front-matter": "^3.0.0",
    "glob": "^7.1.2",
    "highlight.js": "^9.12.0",
    "marked": "^0.5.1",
    "micro": "^9.3.3",
    "octicons": "^8.1.0",
    "rimraf": "^2.6.1",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^0.0.1",
    "babel-eslint": "^10.0.1",
    "chokidar": "^2.0.4",
    "eslint": "^5.7.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.25.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^4.7.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "textlint": "^11.2.3",
    "textlint-filter-rule-whitelist": "^2.0.0",
    "textlint-rule-preset-ja-spacing": "^2.0.1",
    "textlint-rule-preset-jtf-style": "^2.3.1"
  }
}
